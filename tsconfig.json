{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true, // âœ… Ignore type errors in .next/types and node_modules
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "types": [
      "next-auth"
    ],
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts"
    // ðŸ”¥ REMOVE this line:
    // ".next/types/**/*.ts"
    ,
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".next" // ðŸ”¥ Exclude the entire .next folder to avoid type validation issues
  ]
}
